<% layout('layout') -%>


<div class="container">
    <caption >
        <h3 style="display: inline-block">No Dénes</h3>
        <a href="newDog.html" style="display: inline-block"> <i class="fas fa-plus-circle fa-2x" style="float: right" ></i></a>
    </caption>
    <table class="table table-bordered table-hover">


        <thead class="thead-light">
        <tr>
            <th scope="col">Kutya Neve</th>
            <th scope="col">Méret</th>
            <th scope="col">Fajta</th>
            <th scope="col">Szín</th>
            <th scope="col">Életkor</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>

        <% dogs.forEach(function(item){ %>
        <tr>
            <td>  <%= item.name %></td>
            <td> <%= item.size %></td>
            <td> <%= item.breed %></td>
            <td> <%= item.colour %></td>
            <td> <%= item.age %></td>
            <td>
                <span onclick="trashClicked()"><i class="far fa-trash-alt " ></i></span>
                <a href="editDog.html"><i class="far fa-edit"></i> </a>
            </td>
        </tr>
        <% }); %>

        </tbody>
    </table>
</div>

<script>
    function trashClicked() {
        alert("Biztos törlöd az elemet?");
    }
</script>