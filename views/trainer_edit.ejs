<% layout('layout') -%>

<div>
<h2>
    <% if (typeof trainer === 'undefined') { %>
        new
    <% }else{ %>
        edit
    <% } %>
</h2>
</div>

<container>

    <form method="POST">
        <div class="form-row">
            <div class="col-md-4 mb-3">
                <label for="name">name</label>
                <input type="text" class="form-control" id="name" placeholder="name" name="name"
                       value="<%= (typeof trainer !== 'undefined') ? trainer.name : '' %>">
            </div>
            <div class="col-md-4 mb-3">
                <label for="number">number</label>
                <input type="text" class="form-control" id="number" placeholder="number" name="number"
                       value="<%= (typeof trainer !== 'undefined') ? trainer.number : '' %>">
            </div>


        </div>
        <div class="form-group" >
            <input type="submit" class="btn btn-primary" value="Save"/>
            <a href="/trainers" class="btn btn-default">Cancel</a>
        </div>
    </form>


</container>